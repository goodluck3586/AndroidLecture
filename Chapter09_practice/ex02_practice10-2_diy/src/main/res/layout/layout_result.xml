                android:text="그림3"
                android:textSize="15sp" />

            <RatingBar
                android:id="@+id/rbar3"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:numStars="5" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv4"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="그림4"
                android:textSize="15sp" />

            <RatingBar
                android:id="@+id/rbar4"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:numStars="5" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv5"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="그림5"
                android:textSize="15sp" />

            <RatingBar
                android:id="@+id/rbar5"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:numStars="5" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv6"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
